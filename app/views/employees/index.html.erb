<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cpf</th>
      <th>Address</th>
      <th>Number phone</th>
      <th>Date of birth</th>
      <th>Email</th>
      <th>Sex</th>
      <th>Store</th>
      <th>Department</th>
      <th>Function</th>
      <th>Salary</th>
      <th>Admission</th>
      <th>Resignation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.cpf %></td>
        <td><%= employee.address %></td>
        <td><%= employee.number_phone %></td>
        <td><%= employee.date_of_birth %></td>
        <td><%= employee.email %></td>
        <td><%= employee.sex %></td>
        <td><%= employee.store %></td>
        <td><%= employee.department %></td>
        <td><%= employee.function %></td>
        <td><%= employee.salary %></td>
        <td><%= employee.admission %></td>
        <td><%= employee.resignation %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

